<!DOCTYPE html>
<html lang="en">

<head>
    <script>
        window.errorMsg = "<%= error %>";
    </script>
</head>
<% include partials/navbar %>
<script src="/scripts/tournament_new.js"></script>

    <body>

        <main class="container">
            <%=error%>
            <h2> Create A New Tournament</h2>

            <form id="new-tournament-form" action="/tournaments/new" method="POST" style="margin:150px;">
                <div class="form-row">
                    <div class="form-label">
                        <label> Number of Teams</label>
                    </div>
                    <div class="form-dropdown">
                        <select id="entry-team" name="no_of_teams">
                            <option value="8"> 8</option>
                            <option value="16">16</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-label">
                        <label> Tournament Name</label>
                    </div>
                    <div class="form-box">
                        <input id="entry-name" type="text" name="name" placeholder="Tournament Name" style="width: 300px" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-label">
                        <label> Tournament Description</label>
                    </div>
                    <div class="form-box">
                        <input id="entry-description" type="text" name="description" placeholder="Tournament Description" style="width: 300px">
                    </div>
                </div>
                <div class="form-row">
                        <div class="form-label">
                            <label>Twitch Channel Name (Optional)</label>
                        </div>
                        <div class="form-box">
                            <input id="entry-channel" type="text" name="channel_name" placeholder="Example: https://www.twitch.tv/yournamehere" style="width: 300px">
                        </div>
                </div>
                <br>
                <div class="form-row">
                    <div class="form-label">
                        <label></label>
                    </div>
                    <!-- This won't redirect after button is clicked
                    <div class="form-box">
                        <button class="submit butt0n" type="submit" value="Submit">Submit</button>
                    </div>-->

                    <form method="POST" action="/tournaments/new">
                    <input class="make-new" type="submit" value="Submit">
                </div>
            </form>

        </main>

    </body>

</html>
